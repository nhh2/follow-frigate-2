  <style>
    /* not active */
    .nav-pills .nav-link:not(.active) {
      color: black;
    }

    /* active*/
    .nav-pills .nav-link {
      color: white;
    }
  </style>
      
      <div class="container">
        <p>Hi, I'm Nick. Currently writing, reading, and learning about the world.</p>
          
        <!-- Table item-->
          <div class="container">
            <div class="row justify-content-between">

              <table width="100%" border ="0">
                <% @list_of_posts.each do |post| %>

                  <tr>
                    <td>
                      <div class="col">
                        <a href="/writing/<%= post.title %>">
                          <%= post.title %>
                      </div>
                    </td>
                
                    <td text-align="center">
                      <div class="col">
                        <%= post.updated_at.strftime("%B %e, %Y") %>
                      </div>
                    </td>
                  </tr>

                <% end %>
              </table>
      </div>
      </div>
      </div>

      </div>
    </div>
  </div>

